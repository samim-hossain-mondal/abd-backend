{
  "name": "myagiledashboard",
  "version": "0.0.1",
  "description": "A Dashboard for management of Agile SDLC.",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "start": "node src/index.js",
    "dev": "nodemon src",
    "lint": "eslint . --ext .js --fix",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "migrate": "cd prisma/management-db/ && npx prisma migrate dev && cd ../dashboard-db && npx prisma migrate dev",
    "generate": "cd prisma/management-db/ && npx prisma generate && cd ../dashboard-db && npx prisma generate"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "eslint": "^8.32.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.11.0"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@okta/jwt-verifier": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/mocks",
      "src/mocks/**",
      "src/errors.js",
      "src/prismaClient.js",
      "src/controllers",
      "src/controllers/**",
      "src/services",
      "src/services/**",
      "!src/generated/**",
      "!src/controllers/management/**",
      "!src/services/management/**",
      "!src/controllers/dsm/sentimentMeter.controller.js",
      "!src/services/dsm/sentimentMeter.services.js",
      "src/utils"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
